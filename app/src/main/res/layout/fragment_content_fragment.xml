<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_50sdp"
        tools:context=".Content.Content_fragment"


        >


        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            android:elevation="2dp">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />


        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Introduction"
            android:textColor="@color/text"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="@dimen/_10sdp"
            android:text="Centent"
            android:textAlignment="viewStart"
            android:textColor="@color/paragraph_text"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Things You Need"
            android:textColor="@color/text"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/things"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Things"
            android:textColor="@color/paragraph_text"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="viewStart"
            android:layout_margin="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_10sdp"
            />

        <TextView
            android:text="How to Build"
            android:textSize="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/build"
            android:text="Build"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/paragraph_text"
            android:textSize="@dimen/_14sdp"
            android:lineSpacingExtra="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:textAlignment="viewStart"
            android:layout_margin="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Code"
            android:textColor="@color/text"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="code"
            android:textColor="@color/paragraph_text"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="viewStart"
            android:layout_margin="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_10sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Code Function"
            android:textColor="@color/text"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/code_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_10sdp"
            android:text="Function"
            android:textAlignment="viewStart"
            android:textColor="@color/paragraph_text"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>

</ScrollView>